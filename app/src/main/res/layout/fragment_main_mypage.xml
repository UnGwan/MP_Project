<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainMyPageFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:paddingTop="15dp"

        android:fontFamily="@font/suit_b"
        android:textSize="25dp"
        android:text="마이페이지">

    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FB6502"
                android:fontFamily="@font/suit_b"
                android:text="0">

            </TextView>
            <TextView
                android:layout_marginTop="3dp"
                android:fontFamily="@font/suit_b"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="팔로워">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:src="@drawable/main1_icon_profile_1weeks"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:textColor="#FB6502"
                android:fontFamily="@font/suit_b"
                android:text="0">
            </TextView>
            <TextView
                android:layout_marginTop="3dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/suit_b"
                android:text="팔로잉">
            </TextView>
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/myPage_userName_txt"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"

        android:fontFamily="@font/suit_b"
        android:textSize="20dp"
        android:text="닉네임">

    </TextView>

    <View
        android:layout_marginTop="5dp"
        android:background="#C3BFBF"
        android:layout_width="match_parent"
        android:layout_height="4px">

    </View>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange"

                android:textColor="#FFFFFF"
                android:fontFamily="@font/suit_b"
                android:textSize="20dp"
                android:text="새싹 이름 변경하기">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/reset_btn"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange"

                android:textColor="#FFFFFF"

                android:fontFamily="@font/suit_b"
                android:textSize="20dp"
                android:text="새싹 다시 키우기">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatButton
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange"

                android:textColor="#FFFFFF"

                android:fontFamily="@font/suit_b"
                android:textSize="20dp"
                android:text="친구 관리">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/main_myPage_logout_btn"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_orange"

                android:textColor="#FFFFFF"

                android:fontFamily="@font/suit_b"
                android:textSize="20dp"
                android:text="로그아웃">

            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="#FB6502"
        android:fontFamily="@font/suit_b"
        android:textSize="50dp"
        android:text="Day28">

    </TextView>

</LinearLayout>