<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainHomeFragment"
    android:orientation="vertical">

    <ImageButton
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/main1_icon_setting"
        android:layout_gravity="right"
        android:layout_width="80px"
        android:layout_height="80px">


    </ImageButton>
    <FrameLayout
        android:layout_width="1080px"
        android:layout_height="250px">
        <ImageView
            android:src="@drawable/main1_bg_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>
        <TextView
            android:id="@+id/main_top_text"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:fontFamily="@font/suit_b"
            android:textSize="20dp"
            android:layout_marginLeft="50px"
            android:layout_width="450px"
            android:layout_height="wrap_content"
            >

        </TextView>

        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/main1_icon_profile_1weeks"
            android:layout_marginRight="50dp"
            android:layout_gravity="right"
            android:layout_width="200px"
            android:layout_height="200px">

        </ImageView>
    </FrameLayout>

<!--    1주차-->
    <ScrollView
        android:scrollbarFadeDuration = "0"
        android:scrollbarAlwaysDrawVerticalTrack = "true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/main_1weeks_layout"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:layout_centerInParent="true"
                android:layout_width="900px"
                android:layout_height="300px"
                android:id="@+id/main_1weeks_Btn"
                android:background="@drawable/main_button"
                >
            </ImageButton>
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:id="@+id/mission1_txt"

                android:layout_alignBottom="@id/main_1weeks_Btn"
                android:layout_alignLeft="@id/main_1weeks_Btn"
                android:layout_alignRight="@id/main_1weeks_Btn"
                android:layout_alignTop="@id/main_1weeks_Btn"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="30dp"

                android:textSize="20dp"

                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@id/mission1_txt"
                android:layout_alignLeft="@id/mission1_txt"
                android:layout_alignRight="@+id/mission1_txt"

                android:layout_marginBottom="18dp"
                android:layout_marginTop="30dp"


                android:textSize="10dp"
                android:hint="어떤 명언을 할까요"
                >
            </TextView>

            <ProgressBar
                android:id="@+id/progressbar1"
                android:layout_width="40dp"
                android:layout_height="40dp"


                android:layout_alignLeft="@id/main_1weeks_Btn"

                android:layout_marginTop="35dp"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"

                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:indeterminate="false"
                android:max="70"
                android:progressBackgroundTint="#FBE7C6"
                android:progressDrawable="@drawable/circle_progressbar"
                android:progressTint="#FFB726" />

            <TextView
                android:id="@+id/progress_1weeks_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignBottom="@id/progressbar1"
                android:layout_alignLeft="@id/progressbar1"
                android:layout_alignRight="@id/progressbar1"
                android:layout_alignTop="@id/progressbar1"
                android:gravity="center"

                android:fontFamily="@font/suit_b"
                android:textSize="15dp"
                />
        </RelativeLayout>
            <!-- 2주차 -->
            <RelativeLayout
                android:visibility="invisible"
                android:id="@+id/main_2weeks_layout"
                android:padding="10dp"
                android:layout_width="match_parent"
