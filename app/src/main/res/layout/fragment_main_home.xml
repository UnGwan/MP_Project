<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_home"
    android:orientation="vertical">

    <ImageButton
        android:layout_marginRight="20dp"
        android:layout_marginTop="18dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop"
        android:src="@drawable/main1_icon_setting"
        android:layout_gravity="right"
        android:layout_width="80px"
        android:layout_height="80px">

    </ImageButton>
    <FrameLayout
        android:layout_width="1080px"
        android:layout_height="250px">
        <ImageView
            android:src="@drawable/main1_bg_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>
        <TextView
            android:id="@+id/main_top_text"
            android:layout_marginTop="20dp"
            android:textColor="#000000"
            android:fontFamily="@font/suit_b"
            android:textSize="20dp"
            android:layout_marginLeft="50px"
            android:layout_width="450px"
            android:layout_height="wrap_content"
            >

        </TextView>

        <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/main1_icon_profile_1weeks"
            android:layout_marginRight="50dp"
            android:layout_gravity="right"
            android:layout_width="200px"
            android:layout_height="200px">

        </ImageView>
    </FrameLayout>

<!--    1주차-->
    <ScrollView
        android:scrollbarFadeDuration = "0"
        android:scrollbarAlwaysDrawVerticalTrack = "true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <FrameLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="400px">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="400px">
                <ImageButton
                    android:layout_centerInParent="true"
                    android:id="@+id/main_1weeks_Btn"
                    android:layout_gravity="center"
                    android:background="@drawable/main_button"
                    android:layout_width="900px"
                    android:layout_height="300px">

                </ImageButton>
                <TextView
                    android:textSize="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="100dp"
                    android:text="정운관 바보"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </TextView>

                <TextView
                    android:textSize="10dp"
                    android:layout_marginLeft="103dp"
                    android:layout_marginTop="80dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="본인의 다짐 한마디">
                </TextView>

                <ProgressBar
                    android:progress="10"
                    android:layout_marginTop="55dp"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/progressbar1"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:indeterminate="false"
                    android:max="70"
                    android:progressBackgroundTint="#FBE7C6"
                    android:progressDrawable="@drawable/circle_progressbar"
                    android:progressTint="#FB6502" />

                <TextView
                    android:textColor="#FB6502"
                    android:layout_marginLeft="330dp"
                    android:layout_marginTop="45dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=">"
                    android:textSize="40dp"
                    >
                </TextView>

                <TextView
                    android:fontFamily="@font/suit_b"
                    android:id="@+id/progress_1weeks_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="66dp"
                    android:layout_marginLeft="66dp"
                    android:textSize="15dp"
                    android:text="1" />
            </RelativeLayout>
        </FrameLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>