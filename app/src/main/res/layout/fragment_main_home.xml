                    android:gravity="center"

                    android:fontFamily="@font/suit_b"
                    android:textSize="15dp"
                     />
            </RelativeLayout>

            <!-- 4주차 -->
            <RelativeLayout
                android:visibility="invisible"
                android:id="@+id/main_4weeks_layout"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageButton
                    android:layout_centerInParent="true"
                    android:layout_width="900px"
                    android:layout_height="300px"
                    android:id="@+id/main_4weeks_Btn"
                    android:background="@drawable/main_button"
                    >
                </ImageButton>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/mission4_txt"

                    android:layout_alignBottom="@id/main_4weeks_Btn"
                    android:layout_alignLeft="@id/main_4weeks_Btn"
                    android:layout_alignRight="@id/main_4weeks_Btn"
                    android:layout_alignTop="@id/main_4weeks_Btn"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"

                    android:textSize="20dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@id/mission4_txt"
                    android:layout_alignLeft="@id/mission4_txt"
                    android:layout_alignRight="@+id/mission4_txt"

                    android:layout_marginBottom="18dp"


                    android:textSize="10dp"
                    android:text="어떤 명언을 할까요"
                    >
                </TextView>

                <ProgressBar
                    android:id="@+id/progressbar4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"


                    android:layout_alignLeft="@id/main_4weeks_Btn"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"




                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:indeterminate="false"
                    android:max="70"
                    android:progressBackgroundTint="#FBE7C6"
                    android:progressDrawable="@drawable/circle_progressbar"
