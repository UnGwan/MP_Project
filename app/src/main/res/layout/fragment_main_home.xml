                </ImageButton>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:id="@+id/mission3_txt"

                    android:layout_alignBottom="@id/main_3weeks_Btn"
                    android:layout_alignLeft="@id/main_3weeks_Btn"
                    android:layout_alignRight="@id/main_3weeks_Btn"
                    android:layout_alignTop="@id/main_3weeks_Btn"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="70dp"
