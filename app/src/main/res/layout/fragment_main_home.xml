                    android:layout_alignRight="@id/main_2weeks_Btn"
                    android:layout_alignTop="@id/main_2weeks_Btn"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="30dp"

                    android:textSize="20dp"
                    >
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@id/mission2_txt"
                    android:layout_alignLeft="@id/mission2_txt"
                    android:layout_alignRight="@+id/mission2_txt"

                    android:layout_marginBottom="18dp"


                    android:textSize="10dp"
                    android:text="어떤 명언을 할까요"
                    >
                </TextView>

                <ProgressBar
                    android:id="@+id/progressbar2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"


                    android:layout_alignLeft="@id/main_2weeks_Btn"
                    android:layout_marginTop="35dp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center"




                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:indeterminate="false"
                    android:max="70"
                    android:progressBackgroundTint="#FBE7C6"
                    android:progressDrawable="@drawable/circle_progressbar"
                    android:progressTint="#FFB726" />

                <TextView
                    android:id="@+id/progress_2weeks_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@id/progressbar2"
                    android:layout_alignLeft="@id/progressbar2"
                    android:layout_alignRight="@id/progressbar2"
                    android:layout_alignTop="@id/progressbar2"
                    android:gravity="center"

                    android:fontFamily="@font/suit_b"
                    android:textSize="15dp"
                     />
            </RelativeLayout>

            <!-- 3주차 -->
